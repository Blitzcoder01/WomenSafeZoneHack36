<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">

    <TextView
        android:id="@+id/register"
        android:layout_width="700dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="Register Here"
        android:textAlignment="center"
        android:textColor="#0ABBD1"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/r_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Email:"
        android:inputType="textEmailAddress"
        android:textColorHint="#201E1E" />

    <EditText
        android:id="@+id/r_contact"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_email"
        android:ems="10"
        android:hint="Phone Number:"
        android:textColorHint="#201E1E"
        android:layout_centerHorizontal="true"
        android:inputType="phone" />

    <EditText
        android:id="@+id/r_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/r_contact"
        android:hint="Password:"
        android:textColorHint="#201E1E"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@+id/register"
        app:srcCompat="@drawable/icon_current" />

    <Button
        android:id="@+id/r_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/r_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:text="Register Me" />

</RelativeLayout>
